<div class="container">

  <div class="modal fade" id="beggars-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body mx-3">

          <div class="md-form mb-3">
            <label for="title">Post Title:</label>
            <input type="text" class="form-control" id="title" autocomplete="off">
          </div>

          <div class="md-form-group mb-3">
            <label id="categoryAngel" for="category">Post Category:</label>
            <select class="custom-select" class="form-control category">
              <option selected="selected" value="">Select a Category</option>
              <option value="Goods">Goods</option>
              <option value="Services">Services</option>
              <option value="Offers">Offers</option>
            </select>
          </div>

          <div class="md-form-mb-3">
            <label for="body">Post Details:</label>
            <textarea class="form-control" rows="10" id="body"></textarea>
          </div>

          <button class="submit-button">Submit</button>

        </div>
      </div>    
    </div>
