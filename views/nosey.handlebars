<div class="container">

   <div class="row">
     <div class="col-sm-12">
       <h1 class="text-center">Nosey Neighbors</h1>
     </div>
   </div>

  <div class="row">
    <div class="col-sm-12">
      <button>Make a Post</button>
    </div>
  </div>

  <form>

    <div class="form-group">

      <label for="title">Post Title:</label>
      <input type="text" class="form-control" id="title">

      <div class="form-group">
        <label id="categoryAngel" for="category">Post Category:</label>
        <select class="custom-select" id="category">
          <option value=""></option>
          <option value="Goods">Events</option>
          <option value="Services">Rants</option>
          <option value="Offers">Raves</option>
        </select>

      </div>

      <label for="body">Post Details:</label>
      <textarea class="form-control" rows="10" id="body"></textarea>
  
      <button type="submit">Submit</button>

      <div class="row">
        <div id="noseyPosts" class="col-sm-12">
          <ul>
          {{#each Nosey}}
          {{/each}}
          </ul>
        </div>
      </div>

    </div>

  </form>

</div>

